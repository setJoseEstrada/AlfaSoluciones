
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<br />
<br />
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link href="~/Content/css/login.css" rel="stylesheet" />
    <!------ Include the above in your HEAD tag ---------->
    <title>Index</title>
</head>
<body>
    <div>
   

        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-md-4 col-md-offset-4">
                    <h1 class="text-center login-title">Alfa Soluciones</h1>
                    <div class="account-wall">
                        <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                             alt="">
                        <form class="form-signin" method="post" action="@Url.Action("Login")">
                            <input name="correo" type="text" class="form-control" placeholder="Email" required autofocus>
                            <input name ="contrasena" type="password" class="form-control" placeholder="Password" required>
                            <button class="btn btn-lg btn-primary btn-block" type="submit">
                                Sign in
                            </button>
                           
                        </form>
                    </div>
                  
                </div>
            </div>
        </div>
    </div>
</body>
</html>
